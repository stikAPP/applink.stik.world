---
interface Props {
    title: string;
    description: string;
    image?: string;
}
let siteUrl = Astro.site.href;
let {title, description, image} = Astro.props;
let robots = '';
title += ' - STIK';
---
<meta charset="utf-8"/>
<meta name="viewport" content="width=device-width, initial-scale=1"/>
<meta name='robots' content={`max-image-preview:large${robots}`}/>
<title>{title}</title>
<meta name="description" content={description ?? 'Make your favorite objects a story to share'}>
<meta name="keywords" content="">
<meta name="title" content={title}>
<meta name="distribution" content="global">
<meta name="resource-type" content="document">
<meta name="date" content="2024-07-25T09:46:14+00:00"/>
<meta name="application-name" content="STIK APP">
<meta name="author" content="STIK"/>
<meta property="og:locale" content=es>
<meta property="og:type" content="website">
<meta property="og:title" content={title}>
<meta property="og:description" content={description ?? 'Make your favorite objects a story to share'}/>
<meta property="og:url" content={Astro.url.href}>
<meta property="og:site_name" content="STIK APP">
<meta property="og:image"
      content={image ? `${siteUrl}${image.replace('/images/', 'images/')}` : `${siteUrl}images/share.jpg?v=3`}>
<meta property="og:image:alt" content="STIK APP">
<meta property="og:image:width" content="900">
<meta property="og:image:height" content="450">
<meta name="DC.Title" content="STIK APP">
<meta name="DC.Creator" content="STIK APP">
<meta name="DC.Description" content={description ?? 'Make your favorite objects a story to share'}>
<meta name="DC.Date" content="2024-07-25T09:46:14+00:00">
<meta name="DC.date.issued" content="2024-07-25T09:46:14+00:00">
<meta name="DC.Type" content="Text">
<meta name="DC.Language" content=es>
<link rel="apple-touch-icon" sizes="57x57" href={`${siteUrl}favicon/apple-icon-57x57.png`}>
